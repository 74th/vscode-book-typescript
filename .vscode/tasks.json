{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label":"tsc build",
			"command":[
				"${workspaceFolder}/node_modules/.bin/tsc"
			],
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label":"webpack build",
			"command":[
				"${workspaceFolder}/node_modules/.bin/webpack"
			],
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label":"webpack build watch",
			"command":[
				"${workspaceFolder}/node_modules/.bin/webpack -w"
			],
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$tsc"
			]
		},
	]
}